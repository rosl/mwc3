        </dt>

        <dd>
            @Html.DisplayFor(model => model.BottleType.Name)
        </dd>

        <dt>
            @Resources.Common.Distributor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Business.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionType.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionType.Name)
        </dd>

        <dt>
            @Resources.Common.Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Resources.Common.Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Resources.Common.Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Resources.Common.Comment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
    <hr />
    <h4>@Resources.Common.Wine</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Wine.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wine.Name)
        </dd>

        <dt>
            @Resources.Common.Year
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @Resources.Common.Alcohol
        </dt>
