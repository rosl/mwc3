            @Html.DisplayFor(model => model.Wine.Business.Country.Name)
        </dd>


        <dt></dt>
        <dd>@Html.DisplayFor(model => model.Wine.Business.Country.Name)</dd>
    </dl>
    <hr />
</div>

<p>
    @if (Model.TransactionType.Multiplier > 0)
    {
        <a href="#" onclick="LoadPartialView.TransactionsIn()">Back to List</a>
    }
    else
    {
        <a href="#" onclick="LoadPartialView.TransactionsOut()">Back to List</a>
    }
</p>

