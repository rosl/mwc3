@model MWC3.Models.Grape

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Grape</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ParentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParentGrape.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GrapeColor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GrapeColor.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AddedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ChildGrapes)
        </dt>
        @foreach (var item in Model.ChildGrapes)
        {
            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="btDelete" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>


@if (Model.ChildGrapes.Count > 0)
{
    <script type="text/javascript">
        $(function() {
            $('input[type=submit]', this).attr('disabled', 'disabled');
        });
    </script>
}